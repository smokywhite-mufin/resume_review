              "type": "object",
              "properties": {
                "data": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "resume_id": {
                        "type": "number",
                        "example": 1
                      },
                      "applicant_id": {
                        "type": "number",
                        "example": 1
                      },
                      "file_path": {
                        "type": "string",
                        "example": "uploads/1234567890.pdf"
                      },
                      "original_filename": {
                        "type": "string",
                        "example": "홍길동_이력서.pdf"
                      },
                      "analyze_result": {
                        "type": "string",
                        "example": "{\"이름\":\"홍길동\",\"생년월일\":\"1990.01.01\",\"연락처\":\"010-1234-5678\",\"이메일\":\"example@email.com\",\"Github\":\"https://github.com/username\",\"강점\":[\"문제해결능력\"],\"기술스택\":[\"JavaScript\",\"React\"],\"총점\":85}"
                      },
                      "question_list": {
                        "type": "string",
                        "example": "{\"질문\":[{\"질문\":\"JavaScript의 클로저에 대해 설명해주세요.\",\"분류\":\"JavaScript\"}]}"
                      },
                      "created_at": {
                        "type": "string",
                        "example": "2024-01-01T00:00:00.000Z"
                      },
                      "updated_at": {
                        "type": "string",
                        "example": "2024-01-01T00:00:00.000Z"
                      }
                    }
                  }
                },
                "nextCursor": {
                  "type": "object",
                  "properties": {
                    "updatedAt": {
                      "type": "string",
                      "example": "2024-01-01T00:00:00.000Z"
                    },
                    "resumeId": {
                      "type": "number",
                      "example": 5
                    }
                  }
                }
              },
              "xml": {
                "name": "main"
              }
            }
          },
          "500": {
            "description": "서버 에러",
            "schema": {
              "type": "object",
              "properties": {
                "error": {
                  "type": "string",
                  "example": "에러 메시지"
                }
              },
              "xml": {
                "name": "main"
              }
            }
          }
        }
      },
      "delete": {
        "tags": [
          "Resume"
        ],
        "summary": "이력서 전체 삭제",
        "description": "이력서를 전체 삭제합니다.",
        "responses": {
          "200": {
