{
  "swagger": "2.0",
  "info": {
    "title": "Resume Analysis API",
    "description": "이력서 분석 API - 이력서 업로드, AI 분석, 면접 질문 생성",
    "version": "1.0.0"
  },
  "host": "localhost:3000",
  "basePath": "/",
  "tags": [
    {
      "name": "Resume",
      "description": "이력서 관련 API"
    }
  ],
  "schemes": [
    "http"
  ],
  "paths": {
    "/resume/upload": {
      "post": {
        "tags": [
          "Resume"
        ],
        "summary": "이력서 업로드",
        "description": "PDF 이력서 파일을 업로드합니다.",
        "consumes": [
          "multipart/form-data"
        ],
        "parameters": [
          {
            "name": "file",
            "in": "formData",
            "type": "file",
            "required": true,
            "description": "업로드할 PDF 이력서 파일"
          }
        ],
        "responses": {
          "200": {
            "description": "업로드 성공",
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string",
                  "example": "File uploaded successfully"
                },
                "name": {
                  "type": "string",
                  "example": "홍길동"
                },
                "resume_id": {
                  "type": "number",
                  "example": 1
                },
                "applicant_id": {
                  "type": "number",
                  "example": 1
                },
                "created_at": {
                  "type": "string",
                  "example": "2024-01-01T00:00:00.000Z"
                }
              },
              "xml": {
                "name": "main"
              }
            }
          },
          "400": {
            "description": "파일 없음",
            "schema": {
              "type": "object",
              "properties": {
                "error": {
                  "type": "string",
                  "example": "No file uploaded"
                }
              },
              "xml": {
                "name": "main"
              }
            }
          },
          "500": {
            "description": "서버 에러",
            "schema": {
              "type": "object",
              "properties": {
                "error": {
                  "type": "string",
                  "example": "에러 메시지"
                }
              },
              "xml": {
                "name": "main"
              }
            }
          }
        }
      }
    },
    "/resumes/{resumeId}/analyze": {
      "post": {
        "tags": [
          "Resume"
        ],
        "summary": "이력서 분석",
        "description": "AI를 사용하여 이력서를 분석하고 면접 질문을 생성합니다.",
        "parameters": [
          {
            "name": "resumeId",
            "in": "path",
            "required": true,
            "type": "integer",
            "description": "분석할 이력서 ID"
          }
        ],
        "responses": {
          "200": {
            "description": "분석 성공",
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string",
                  "example": "Resume analyzed successfully"
                },
                "data": {
                  "type": "object",
                  "properties": {
                    "analyzeResultJson": {
                      "type": "object",
                      "properties": {
                        "이름": {
                          "type": "string",
                          "example": "홍길동"
                        },
                        "생년월일": {
                          "type": "string",
                          "example": "1990.01.01"
                        },
                        "연락처": {
                          "type": "string",
                          "example": "010-1234-5678"
                        },
                        "이메일": {
                          "type": "string",
                          "example": "example@email.com"
                        },
                        "Github": {
                          "type": "string",
                          "example": "https://github.com/username"
                        },
                        "강점": {
                          "type": "array",
                          "example": [
                            "문제해결능력",
                            "협업과 소통"
                          ],
                          "items": {
                            "type": "string"
                          }
                        },
                        "기술스택": {
                          "type": "array",
                          "example": [
                            "JavaScript",
                            "TypeScript",
                            "React",
                            "Node.js"
                          ],
                          "items": {
                            "type": "string"
                          }
                        },
                        "총점": {
                          "type": "number",
                          "example": 85
                        }
                      }
                    },
                    "questionListJson": {
                      "type": "object",
                      "properties": {
                        "질문": {
                          "type": "array",
                          "example": [
                            "JavaScript의 클로저에 대해 설명해주세요.",
                            "React Hooks에 대해 설명해주세요."
                          ],
                          "items": {
                            "type": "string"
                          }
                        }
                      }
                    },
                    "updated_at": {
                      "type": "string",
                      "example": "2024-01-01T00:00:00.000Z"
                    }
                  }
                }
              },
              "xml": {
                "name": "main"
              }
            }
          },
          "404": {
            "description": "이력서를 찾을 수 없음",
            "schema": {
              "type": "object",
              "properties": {
                "error": {
                  "type": "string",
                  "example": "Resume not found"
                }
              },
              "xml": {
                "name": "main"
              }
            }
          },
          "500": {
            "description": "서버 에러",
            "schema": {
              "type": "object",
              "properties": {
                "error": {
                  "type": "string",
                  "example": "에러 메시지"
                }
              },
              "xml": {
                "name": "main"
              }
            }
          }
        }
      }
    },
    "/resumes": {
      "get": {
        "tags": [
          "Resume"
        ],
        "summary": "모든 이력서 조회",
        "description": "저장된 모든 이력서 목록을 조회합니다. analyze_result와 question_list는 JSON 문자열 형태입니다.",
        "responses": {
          "200": {
            "description": "조회 성공",
            "schema": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "resume_id": {
                    "type": "number",
                    "example": 1
                  },
                  "applicant_id": {
                    "type": "number",
                    "example": 1
                  },
                  "file_path": {
                    "type": "string",
                    "example": "uploads/1234567890.pdf"
                  },
                  "analyze_result": {
                    "type": "string",
                    "example": "{\"이름\":\"홍길동\",\"생년월일\":\"1990.01.01\",\"연락처\":\"010-1234-5678\",\"이메일\":\"example@email.com\",\"Github\":\"https://github.com/username\",\"강점\":[\"문제해결능력\"],\"기술스택\":[\"JavaScript\",\"React\"],\"총점\":85}"
                  },
                  "question_list": {
                    "type": "string",
                    "example": "{\"질문\":[\"JavaScript의 클로저에 대해 설명해주세요.\",\"React Hooks에 대해 설명해주세요.\"]}"
                  },
                  "created_at": {
                    "type": "string",
                    "example": "2024-01-01T00:00:00.000Z"
                  },
                  "updated_at": {
                    "type": "string",
                    "example": "2024-01-01T00:00:00.000Z"
                  }
                }
              },
              "xml": {
                "name": "main"
              }
            }
          },
          "500": {
            "description": "서버 에러",
            "schema": {
              "type": "object",
              "properties": {
                "error": {
                  "type": "string",
                  "example": "에러 메시지"
                }
              },
              "xml": {
                "name": "main"
              }
            }
          }
        }
      }
    }
  }
}