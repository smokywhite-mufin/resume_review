{
  "swagger": "2.0",
  "info": {
    "title": "Resume Analysis API",
    "description": "이력서 분석 API - 이력서 업로드, AI 분석, 면접 질문 생성",
    "version": "1.0.0"
  },
  "host": "localhost:8000",
  "basePath": "/api",
  "tags": [
    {
      "name": "Resume",
      "description": "이력서 관련 API"
    }
  ],
  "schemes": [
    "http"
  ],
  "paths": {
    "/resume/upload": {
      "post": {
        "tags": [
          "Resume"
        ],
        "summary": "이력서 업로드",
        "description": "PDF 이력서 파일을 업로드합니다.",
        "consumes": [
          "multipart/form-data"
        ],
        "parameters": [
          {
            "name": "file",
            "in": "formData",
            "type": "file",
            "required": true,
            "description": "업로드할 PDF 이력서 파일"
          }
        ],
        "responses": {
          "200": {
            "description": "업로드 성공",
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string",
                  "example": "File uploaded successfully"
                },
                "name": {
                  "type": "string",
                  "example": "홍길동"
                },
                "resume_id": {
                  "type": "number",
                  "example": 1
                },
                "applicant_id": {
                  "type": "number",
                  "example": 1
                },
                "created_at": {
                  "type": "string",
                  "example": "2024-01-01T00:00:00.000Z"
                }
              },
              "xml": {
                "name": "main"
              }
            }
          },
          "400": {
            "description": "파일 없음",
            "schema": {
              "type": "object",
              "properties": {
                "error": {
                  "type": "string",
                  "example": "No file uploaded"
                }
              },
              "xml": {
                "name": "main"
              }
            }
          },
          "500": {
            "description": "서버 에러",
            "schema": {
              "type": "object",
              "properties": {
                "error": {
                  "type": "string",
                  "example": "에러 메시지"
                }
              },
              "xml": {
                "name": "main"
              }
            }
          }
        }
      }
    },
    "/resumes/{resumeId}/analyze": {
      "post": {
        "tags": [
          "Resume"
        ],
        "summary": "이력서 분석",
        "description": "AI를 사용하여 이력서를 분석하고 면접 질문을 생성합니다.",
        "parameters": [
          {
            "name": "resumeId",
            "in": "path",
            "required": true,
            "type": "string",
            "description": "분석할 이력서 ID"
          }
        ],
        "responses": {
          "200": {
            "description": "분석 성공",
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string",
                  "example": "Resume analyzed successfully"
                },
                "data": {
                  "type": "object",
                  "properties": {
                    "analyzeResultJson": {
                      "type": "object",
                      "properties": {
                        "이름": {
                          "type": "string",
                          "example": "홍길동"
                        },
                        "생년월일": {
                          "type": "string",
                          "example": "1990.01.01"
                        },
                        "이메일": {
                          "type": "string",
                          "example": "example@email.com"
                        },
                        "연락처": {
                          "type": "string",
                          "example": "010-1234-5678"
                        },
                        "깃허브 주소": {
                          "type": "string",
                          "example": "https://github.com/username"
                        },
                        "그 이외의 주소": {
                          "type": "string",
                          "example": "https://blog.example.com"
                        },
                        "기술스택": {
                          "type": "array",
                          "example": [
                            "JavaScript",
                            "TypeScript",
                            "React",
                            "Node.js"
                          ],
                          "items": {
                            "type": "string"
                          }
                        },
                        "프로젝트": {
                          "type": "array",
                          "example": [
                            "프로젝트 1",
                            "프로젝트 2"
                          ],
                          "items": {
                            "type": "string"
                          }
                        },
                        "강점": {
                          "type": "array",
                          "example": [
                            "문제해결능력",
                            "협업과 소통"
                          ],
                          "items": {
                            "type": "string"
                          }
                        },
                        "총점": {
                          "type": "number",
                          "example": 85
                        }
                      }
                    },
                    "questionListJson": {
                      "type": "object",
                      "properties": {
                        "기술 질문": {
                          "type": "array",
                          "example": [
                            "JavaScript의 클로저에 대해 설명해주세요.",
                            "React Hooks에 대해 설명해주세요."
                          ],
                          "items": {
                            "type": "string"
                          }
                        }
                      }
                    },
                    "updated_at": {
                      "type": "string",
                      "example": "2024-01-01T00:00:00.000Z"
                    }
                  }
                }
              },
              "xml": {
                "name": "main"
              }
            }
          },
          "404": {
            "description": "이력서를 찾을 수 없음",
            "schema": {
              "type": "object",
              "properties": {
                "error": {
                  "type": "string",
                  "example": "Resume not found"
                }
              },
              "xml": {
                "name": "main"
              }
            }
          },
          "500": {
            "description": "서버 에러",
            "schema": {
              "type": "object",
              "properties": {
                "error": {
                  "type": "string",
                  "example": "에러 메시지"
                }
              },
              "xml": {
                "name": "main"
              }
            }
          }
        }
      }
    },
    "/resumes": {
